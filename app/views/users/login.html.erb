<div class="text-center">
    <h2>Login</h2>
    <%= form_tag '/login' do %>
        Email: <%= text_field_tag :email %><br>
        Password: <%= password_field_tag :password %><br>
        <%= submit_tag "Log In" %>
    <% end %>
</div>
<br><br>
<div class="text-center">
    Don't have an account?
    <br>
    <%= button_to "Create one!", signup_path, method: :get %>
</div>