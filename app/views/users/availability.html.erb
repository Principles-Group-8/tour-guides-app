<h1>User Availability</h1>
<form id="availability">
    <div class="row">
        <table class="text-center col-md-8 offset-md-2">
            <thead>
                <td>Monday</td>
                <td>Tuesday</td>
                <td>Wednesday</td>
                <td>Thursday</td>
                <td>Friday</td>
                <td>Saturday</td>
                <td>Sunday</td>
            </thead>
            <tbody>
                <% days = ["mon", "tues", "wed", "thur", "fri", "sat", "sun"] %>
                <% days.each { |day|%>
                    <td id=<%= day%>>
                        <input type="checkbox" class="btn-check" id="<%= day%>_9" name="<%= day%>_9">
                        <label class="btn btn-outline-primary" for="<%= day%>_9">9 a.m. - 9:30 a.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_9:30" name="<%= day%>_9:30">
                        <label class="btn btn-outline-primary" for="<%= day%>_9:30">9:30 a.m. - 10 a.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_10" name="<%= day%>_10">
                        <label class="btn btn-outline-primary" for="<%= day%>_10">10 a.m. - 10:30 a.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_10:30" name="<%= day%>_10:30">
                        <label class="btn btn-outline-primary" for="<%= day%>_10:30">10:30 a.m. - 11 a.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_11" name="<%= day%>_11">
                        <label class="btn btn-outline-primary" for="<%= day%>_11">11 a.m. - 11:30 a.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_11:30" name="<%= day%>_11:30">
                        <label class="btn btn-outline-primary" for="<%= day%>_11:30">11:30 a.m. - 12 p.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_12" name="<%= day%>_12">
                        <label class="btn btn-outline-primary" for="<%= day%>_12">12 p.m. - 12:30 p.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_12:30" name="<%= day%>_12:30">
                        <label class="btn btn-outline-primary" for="<%= day%>_12:30">12:30 p.m. - 1 p.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_1" name="<%= day%>_1">
                        <label class="btn btn-outline-primary" for="<%= day%>_1">1 p.m. - 1:30 p.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_1:30" name="<%= day%>_1:30">
                        <label class="btn btn-outline-primary" for="<%= day%>_1:30">1:30 p.m. - 2 p.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_2" name="<%= day%>_2">
                        <label class="btn btn-outline-primary" for="<%= day%>_2">2 p.m. - 2:30 p.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_2:30" name="<%= day%>_2:30">
                        <label class="btn btn-outline-primary" for="<%= day%>_2:30">2:30 p.m. - 3 p.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_3" name="<%= day%>_3">
                        <label class="btn btn-outline-primary" for="<%= day%>_3">3 p.m. - 3:30 p.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_3:30" name="<%= day%>_3:30">
                        <label class="btn btn-outline-primary" for="<%= day%>_3:30">3:30 p.m. - 4 p.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_4" name="<%= day%>_4">
                        <label class="btn btn-outline-primary" for="<%= day%>_4">4 p.m. - 4:30 p.m.</label>
                        <br>
                        <input type="checkbox" class="btn-check" id="<%= day%>_4:30" name="<%= day%>_4:30">
                        <label class="btn btn-outline-primary" for="<%= day%>_4:30">4:30 p.m. - 5 p.m.</label>
                </td>
                <% } %>
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-center my-2">
        <input class="btn btn-primary" type="submit" value="Submit"/>
    </div>
</form>