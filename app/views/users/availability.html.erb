<h1>User Availability</h1>
<form id="availability">
    <table>
        <thead>
            <tr>
                <th>Mon</th>
                <th>Tues</th>
                <th>Wed</th>
                <th>Thur</th>
                <th>Fri</th>
                <th>Sat</th>
                <th>Sun</th>
            </tr>
        </thead>
        <tbody>
            <% days = ["mon", "tues", "wed", "thur", "fri", "sat", "sun"] %>
            <% days.each { |day|%>
            <td id=<%= day%>>
                <input type="checkbox" name="<%= day%>_9" value="yes">9 a.m. - 9:30 a.m.
                <br>
                <input type="checkbox" name="<%= day%>_9:30" value="yes">9:30 a.m. - 10 a.m.
                <br>
                <input type="checkbox" name="<%= day%>_10" value="yes">10 a.m. - 10:30 a.m.
                <br>
                <input type="checkbox" name="<%= day%>_10:30" value="yes">10:30 a.m. - 11 a.m.
                <br>
                <input type="checkbox" name="<%= day%>_11" value="yes">11 a.m. - 11:30 a.m.
                <br>
                <input type="checkbox" name="<%= day%>_11:30" value="yes">11:30 a.m. - 12 p.m.
                <br>
                <input type="checkbox" name="<%= day%>_12" value="yes">12 p.m. - 12:30 p.m.
                <br>
                <input type="checkbox" name="<%= day%>_12:30" value="yes">12:30 p.m. - 1 p.m.
                <br>
                <input type="checkbox" name="<%= day%>_1" value="yes">1 p.m. - 1:30 p.m.
                <br>
                <input type="checkbox" name="<%= day%>_1:30" value="yes">1:30 p.m. - 2 p.m.
                <br>
                <input type="checkbox" name="<%= day%>_2" value="yes">2 p.m. - 2:30 p.m.
                <br>
                <input type="checkbox" name="<%= day%>_2:30" value="yes">2:30 p.m. - 3 p.m.
                <br>
                <input type="checkbox" name="<%= day%>_3" value="yes">3 p.m. - 3:30 p.m.
                <br>
                <input type="checkbox" name="<%= day%>_3:30" value="yes">3:30 p.m. - 4 p.m.
                <br>
                <input type="checkbox" name="<%= day%>_4" value="yes">4 p.m. - 4:30 p.m.
                <br>
                <input type="checkbox" name="<%= day%>_4:30" value="yes">4:30 p.m. - 5 p.m.
            </td>
            <% } %>
        </tbody>
    </table>
    <input type="submit" value="Submit"/>
</form>