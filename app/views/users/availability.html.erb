<% @user = current_user %>

<div class="container-fluid">
    <h1 class="text-center my-4">User Availability</h1>
    <form id="availability" class="input-group justify-content-center" method="post">
        <div class="row justify-content-center white-background my-2" style="overflow-x:auto;">
            <table class="text-center col-md-8 my-2">
                <thead>
                    <td>Mon</td>
                    <td>Tue</td>
                    <td>Wed</td>
                    <td>Thu</td>
                    <td>Fri</td>
                    <td>Sat</td>
                    <td>Sun</td>
                </thead>
