<h1 class="text-center my-4">Guide List</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Guide Name</th>
                    <th>Guide Email</th>
                    <th class="text-center">Guide Points</th>
                    <th class="text-center">Edit Points</th>
                    <th class="text-center">Admin?</th>
                    <th class="text-center">Delete Guide</th>
                </tr>
            </thead>
            <tbody>
                <% User.order(:last_name).all.each do |user| %>
                    <tr>
                        <td>
                            <%= user.name_display %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td class="text-center">
                            <%= user.points %>
                        </td>
                        <td class="text-center">

                        </td>
                        <td class="text-center">
                            <% if user.administrator %>
                                Yes
                            <% else %>
                                <a href=<%= "admin/#{user.id}" %> class="btn btn-primary btn-sm rounded-2 shadow-none" onclick="return confirm('Are you sure you want to convert this user to an admin?')">
                                Make Admin
                                </a>
                            <% end %>
                        </td>
                        <td class="text-center">
                            <a href=<%= "#{user.id}" %> class="btn btn-danger btn-sm rounded-2 shadow-none" onclick="return confirm('Are you sure you want to delete this user?')">
                            Delete
                            </a>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>