<% cur_user = User.find(session[:user_id]) %>

<div class="container-fluid">
    <h1 class="text-center my-4">Sub Board</h1>

    <div class="row">
        <div class="col-4 offset-1 mb-5 mb-lg-0">
            <h3 class="text-center">
                Your Tours
            </h3>
            <table class="table table-bordered text-center">
                <tbody>
                    <% cur_user.tours.order(:time).all.select {|tour| tour.end_time > Time.zone.now}.each do |tour| %>
                        <%= form_tag '/subboard_remove' do %>
                            <%= hidden_field_tag :tour_id , tour.id %>
                            <tr>
                                <td>
                                    <%= tour.display %>
                                </td>
                                <td>
                                    <%= submit_tag "Post", class: "btn btn-primary my-1 shadow-none" %>
                                </td>
                            </tr> 
                        <% end %>
                    <% end %>
                </tbody>
            </table>
            <% if cur_user.tours.all.select{|tour| tour.end_time > Time.zone.now}.size == 0 %>
                <h5 class="text-center">
                    You have no currently assigned tours
                </h5>
            <% end %>
        </div>

        <div class="col-4 offset-2 mb-3 mb-lg-0">
            <h3 class="text-center">
                Available Tours
            </h3>
            <table class="table table-bordered text-center">
                <tbody>       
                    <% Tour.order(:time).all.select{|tour| tour.users.size < tour.min_guides && !tour.users.member?(cur_user) && tour.end_time > Time.zone.now}.each do |tour| %>
                        <%= form_tag '/subboard_claim' do %>   
                            <%= hidden_field_tag :tour_id , tour.id %> 
                            <tr>
                                <td>
                                    <%= tour.display %>
                                </td>
                                <td>
                                <%= submit_tag "Claim", class: "btn btn-primary my-1 shadow-none" %>
                                </td>
                            </tr> 
                        <% end %>
                    <% end %>
                </tbody>
            </table>
            <% if Tour.all.select{|tour| tour.users.size < tour.min_guides && !tour.users.member?(cur_user) && tour.end_time > Time.zone.now}.size == 0 %>
                <h5 class="text-center">
                    There are no tours currently available to claim
                </h5>
            <% end %>
        </div>
    </div>
</div>