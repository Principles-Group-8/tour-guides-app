<div class="container-fluid">
    <h1 class="text-center my-4">Points</h1>
    <div class="row">
        <div class="col-4 offset-4">
            <table class="table table-bordered">
                <tr>
                    <th>Name</th>
                    <th>Points</th>
                </tr>
                <tbody>
                    <% @data.order(:last_name).each do |data| %>
                    <tr>
                        <td><%= data.name_display %></td>
                        <td><%= data.points %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>