<div class="container-fluid">
    <h1 class="text-center my-4">Tour Scheduler</h1>

    <div class="row">
        <div class="col-md-4 offset-md-2 mb-3 mb-lg-0">
            <h3 class="text-center">
                Weekly Tours
            </h3>
            <table class="table table-bordered text-center">
                <tbody>       
                    <% Tour.order(:time).all.select{|tour| tour.weekly && tour.time > Time.zone.now}.each do |tour| %>
                        <tr>
                            <td>
                                <%= tour.display %>
                            </td>
                        </tr> 
                    <% end %>
                </tbody>
            </table>
            <% if Tour.all.select{|tour| tour.users.size < tour.min_guides && !tour.users.member?(cur_user) && tour.end_time > Time.zone.now}.size == 0 %>
                <h5 class="text-center">
                    There are no tours currently available to claim
                </h5>
            <% end %>
        </div>
        </div>
</div>