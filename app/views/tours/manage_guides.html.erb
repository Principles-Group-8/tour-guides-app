<h1 class="text-center my-4">Manage Guides</h1>
<h4 class="text-center my-4"><%= @tour.display %></h4>
<div class="row">
    <div class="col-4 offset-1 mb-5 mb-lg-0">
        <h3 class="text-center">On Tour</h3>
        <table class="table table-bordered text-center">
            <tbody>
                <% @tour.users.order(:last_name).all.each do |user| %>
                    <%= form_tag "/remove_guide" do %>
                        <%= hidden_field_tag :tour , @tour.id %>
                        <%= hidden_field_tag :user_id , user.id %>
                        <tr>
                            <td>
                                <%= user.name_display %>
                            </td>
                            <td>
                                <%= submit_tag "Remove", class: "btn btn-primary my-1 shadow-none" %>
                            </td>
                        </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>
        <% if @tour.users.size == 0 %>
            <h5 class="text-center">
                There are no guides on this tour
            </h5>
        <% end %>
    </div>
    <div class="col-4 offset-2 mb-3 mb-lg-0">
        <h3 class="text-center">Not on Tour</h3>
        <table class="table table-bordered text-center">
            <tbody>
                <% User.order(:last_name).all.select{|user| !@tour.users.member?(user)}.each do |user| %>
                    <%= form_tag "/add_guide" do %>
                        <%= hidden_field_tag :tour , @tour.id %>
                        <%= hidden_field_tag :user_id , user.id %>
                        <tr>
                            <td>
                            <%= user.name_display %>
                            </td>
                            <td>
                            <%= submit_tag "Add", class: "btn btn-primary my-1 shadow-none"%>
                            </td>
                        </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>
        <% if User.all.select{|user| !@tour.users.member?(user)}.size == 0 %>
            <h5 class="text-center">
                All guides are assigned to this tour
            </h5>
        <% end %>
    </div>
</div>